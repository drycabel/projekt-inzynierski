<div class="event-form-container">
    <%= render partial: '/shared/page_header', locals: { header: 'Change Password', subheader: 'This is the place where you can change your password.'} %>
    <%= render partial: 'shared/errors', locals: {object: @form} %>
    <%= form_with url: user_password_path, method: :put, local: true do |f| %>
        <div class="form-group">
            <%= f.label :old_password, 'Old password' %>
            <%= f.password_field :old_password, name: "session[old_password]", class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :password, 'New password' %>
            <%= f.password_field :password, name: "session[password]", class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :password_re_type, 'Re-type New password' %>
            <%= f.password_field :password_re_type, name: "session[password_re_type]", class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-outline-primary btn-block' %>
        </div>
    <% end %>
</div>