<h1>Events <%= link_to "Add event", new_event_path, class: 'btn btn-primary' %></h1>

<div class="custom-cards">
    <% @events.each do |event| %>
        <div class="card">                    
            <div class="card-body">
                <h5 class="card-title"><%= event.title %></h5>
                <p class="card-text"><%= event.description %></p>
                <%= link_to "Details", event_path(event), class: "btn btn-info btn-sm" %>
                <%= link_to "Edit", edit_event_path(event), class: "btn btn-primary btn-sm" %>
                <%= link_to "Destroy", confirm_destroy_event_path(event), class: "btn btn-danger btn-sm" %>
            </div>
        </div>
    <% end %>
</div>