<%= render partial: 'shared/errors', locals: {object: @form} %>
<%= form_with url: action_path, method: action_method, local: true do |f| %>
    <div class="form-group">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, value: @form.event&.title, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
        <%= f.label :description, 'Description' %>
        <%= f.text_area :description, value: @form.event&.description, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.submit button_name, class: 'btn btn-primary' %>
    </div>
<% end %>