<div class="registration-container">
    <%= render partial: '/shared/page_header', locals: { header: 'Sign Up', subheader: 'This is the place where you can create your own account'} %>

    <% if @form.errors.present? %>
        <%- @form.errors.full_messages.each do |msg| %>
            <p class="alert alert-danger"><%= msg %></p>
        <% end %>
    <% end %>

    <%= form_with url: registrations_path, local: true do |f| %>
        <%= f.hidden_field "session[token]", value: params[:token] %>
        <div class="form-group">
            <%= f.label :email, 'E-mail' %>
            <%= f.email_field :email, name: "session[email]", value: params[:email], class: 'form-control', required: true %>
        </div>
        <div class="form-group">
            <%= f.label :name, 'Name' %>
            <%= f.text_field :name, name: "session[name]", class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :surname, 'Surname' %>
            <%= f.text_field :surname, name: "session[surname]", class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :birth_date, 'Birth date' %>
            <%= f.date_field :birth_date, name: "session[birth_date]", class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :short_bio, 'Short biography' %>
            <%= f.text_area :short_bio, name: "session[short_bio]", class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password, name: "session[password]", class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :password_re_type, 'Re-Type Password' %>
            <%= f.password_field :password_re_type, name: "session[password_re_type]", class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.submit 'Sign-up', class: 'btn btn-outline-primary btn-block' %>
        </div>
    <% end %>
</div>